## default xkcd style

# line
lines.linewidth : 2.0

# font
font.family : xkcd, xkcd Script, Comic Neue, Comic Sans MS
font.size   : 14.0

# axes
axes.linewidth  : 1.5
axes.grid       : False
axes.unicode_minus: False
axes.edgecolor: black

# ticks
xtick.major.size : 8
xtick.major.width: 3
ytick.major.size : 8
ytick.major.width: 3

# grids
grid.linewidth: 0.0

# figure
figure.facecolor: white

# path
path.sketch : 1, 100, 2
path.effects: ('withStroke', {'linewidth': 4, 'foreground': 'w' })
